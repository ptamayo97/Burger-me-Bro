<div class="container">

  <div class="row">

{{>burger-create}}

  </div>

  <div class="row">

    <div class="col-lg-4 offset-lg-1">

      <h3>Devour Burger!</h3>

      <ul>

        {{#each burgers}} {{#unless devoured}} {{>burger-block devoured=true}} {{/unless}} {{/each}}
      </ul>

    </div>


    <div class="col-lg-4">

      <h3 class="devoured">Burgers Devoured!</h3>

      <ul>

        {{#each burgers}} 
        
        {{#if devoured}}

        {{>burger-devoured}}

        {{/if}} 
        
        {{/each}}

      </ul>

    </div>

  </div>

  <div class="row">

    <div class="col-12">

      <h1>Favorites</h1>

      {{#each burgers}} 
      
      {{#if favorite}}

      {{>burger-fav}}

      {{/if}} 
      
      {{/each}}

    </div>

  </div>

</div>